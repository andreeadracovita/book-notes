<!DOCTYPE html>
<%- include('partials/header.ejs'); -%>

<main role="main">
	<div class="container main-padding">
		<form
			method="post"
			<% if (locals.book) { %> action="/edit/<%= book.id %>" <% } else { %> action="/add" <% } %>
		>
			<div class="row mt-5">
				<div class="col-12 col-lg-4 text-center">
					<% if (locals.book) { %>
						<!-- Edit -->
						<% if (locals.coverUrl) { %>
							<div class="detailed-cover-container mb-3">
								<img src="<%= coverUrl %>" class="detailed-cover" loading="lazy" />
							</div>
						<% } else { %>
							<div class="w-100 d-flex justify-content-center">
								<div class="cover-placeholder mb-3 d-flex align-items-center justify-content-center">
									<p class="h2">Cover</p>
								</div>
							</div>
						<% } %>
						<div id="desktop-buttons" class="d-none d-lg-inline">
							<button class="btn button w-75 mb-2 d-inline-flex align-items-center justify-content-center" name="action" value="save">
								<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-pencil me-1" viewBox="0 0 16 16">
									<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
								</svg>
								Save
							</button>
							<button class="btn button w-75 d-inline-flex align-items-center justify-content-center" name="action" value="remove">
								<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-trash3 me-1" viewBox="0 0 16 16">
									  <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
								</svg>
								Remove
							</button>
						</div>
					<% } else { %>
						<!-- New -->
						<div class="w-100 d-flex justify-content-center">
							<div class="cover-placeholder mb-3 d-flex align-items-center justify-content-center">
								<p class="h2">Cover</p>
							</div>
						</div>
						<div id="desktop-buttons" class="d-none d-lg-inline">
							<button class="btn button w-75 d-inline-flex align-items-center justify-content-center" value="submit">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
									<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
								</svg>
								Add
							</button>
						</div>
					<% } %>
				</div>
				
				<div class="col-12 col-lg-8">
					<div class="conditional-center">
						<% if (locals.book) { %>
							<h1 class="league-spartan">Edit book</h1>
						<% } else { %>
							<h1 class="league-spartan">Add a new book</h1>
						<% } %>
					</div>
					<div class="row mb-2">
						<div class="col-3">
							<label for="title" class="form-label lato-regular">Title</label>
						</div>
						<div class="col-9">
							<input id="title" type="text" name="title" class="w-100 form-control" required <% if(locals.book) { %> value="<%= book.title %>" <% } %> >
						</div>
					</div>
					<div class="row mb-2">
						<div class="col-3">
							<label for="author" class="form-label lato-regular">Author</label>
						</div>
						<div class="col-9">
							<input id="author" type="text" name="author" class="w-100 form-control" required <% if(locals.book) { %> value="<%= book.author %>" <% } %> >
						</div>
					</div>
					<div class="row mb-2">
						<div class="col-3">
							<label for="date_read">Date read</label>
						</div>
						<div class="col-4">
							<input id="date_read" type="date" name="date_read" class="form-control" required <% if(locals.date) { %> value="<%= date %>" <% } %> >
						</div>
					</div>
					<div class="row mb-2">
						<div class="col-3">
							<label for="isbn" class="form-label lato-regular">ISBN</label>
						</div>
						<div class="col-4">
							<input id="isbn" type="text" name="isbn" class="form-control" required minlength="10" maxlength="13" <% if(locals.book) { %> value="<%= book.isbn %>" <% } %> >
						</div>
					</div>
					<div class="row mb-3">
						<label for="rating" class="fs-5 form-label league-spartan">My rating</label>
						<div class="rating">
							<% for (let i = 5; i >= 1; i--) { %>
								<input
									type="radio"
									id="star<%= i %>"
									name="rating"
									value="<%= i %>"
									<% if (locals.book && book.rating === i) { %>checked<% } %>
								/>
								<label for="star<%= i %>" title="<%= i %> stars" class="">â˜…</label>
							<% } %>
						</div>
						<small class="text-body-secondary">(Optional)</small>
					</div>
					<div class="row mb-3">
						<label for="short_description" class="fs-5 form-label league-spartan">Description</label>
						<textarea id="short_description" name="short_description" rows="10" class="form-control" maxlength="1000"><% if(locals.book) { %><%= book.short_description %><% } %></textarea>
						<small class="text-body-secondary">Max 1000 characters</small>
						<small class="text-body-secondary">(Optional)</small>
					</div>
					<div class="row mb-5">
						<label for="notes" class="fs-5 form-label league-spartan">Notes</label>
						<textarea id="notes" name="notes" rows="10" class="form-control" maxlength="2000"><% if(locals.book) { %><%= book.notes %><% } %></textarea>
						<small class="text-body-secondary">Max 2000 characters</small>
						<small class="text-body-secondary">(Optional)</small>
					</div>
				</div>
			</div>

			<div id="mobile-buttons" class="d-block d-lg-none mb-5 text-center">
				<% if (locals.book) { %>
					<!-- Edit -->
					<button class="btn button w-25 d-inline-flex align-items-center justify-content-center me-2" name="action" value="save">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-pencil me-1" viewBox="0 0 16 16">
							<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
						</svg>
						Save
					</button>
					<button class="btn button w-25 d-inline-flex align-items-center justify-content-center" name="action" value="remove">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-trash3 me-1" viewBox="0 0 16 16">
							  <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
						</svg>
						Remove
					</button>
				<% } else { %>
					<!-- New -->
					<button class="btn button w-25 d-inline-flex align-items-center justify-content-center" value="submit">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus me-1" viewBox="0 0 16 16">
							<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
						</svg>
						Add
					</button>
				<% } %>
			</div>
		</form>
	</div>
</main>

<%- include('partials/footer.ejs'); -%>