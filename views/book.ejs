<!DOCTYPE html>
<%- include('partials/header.ejs'); -%>

<div>
	<img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg" />
	<form method="post" action="/edit/<%= book.id %>">
		<button style="background: green" name="action" value="edit">Edit</button>
	</form>
	<h2><%= book.title %></h2>
	<h3><%= book.author %></h3>

	<p>ISBN: <%= book.isbn %>
	<p>Date read: <%= book.date_read.toLocaleString('default', { day: 'numeric', month: 'short', year: 'numeric' }) %></p>
	<h4>My Rating:</h4>
	<div class="rate">
		<% for (let i = 5; i >= 1; i--) { %>
			<input
				type="radio"
				id="star<%= i %>"
				name="rating"
				value="<%= i %>"
				<% if (book.rating === i) { %>checked<% } %>
				disabled
			/>
			<label for="star<%= i %>" title="text"><%= i %> stars</label>
		<% } %>
	</div>

	<p><%= book.short_description %></p>
	<h4>Notes</h4>
	<p><%= book.notes %></p>
</div>

<%- include('partials/footer.ejs'); -%>