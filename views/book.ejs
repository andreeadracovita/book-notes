<!DOCTYPE html>
<%- include('partials/header.ejs'); -%>

<div class="container">
	<div class="row my-5">
		<div class="col-4 text-center">
			<img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg" class="mb-3" />
			<form method="post" action="/edit/<%= book.id %>">
				<button class="btn button w-75" name="action" value="edit">
					<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
						<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
					</svg>
					Edit
				</button>
			</form>
		</div>
		<div class="col-8">
			<h1 class="league-spartan mb-0"><%= book.title %></h1>
			<h2 class="lato-regular mb-3"><%= book.author %></h2>
			<p>ISBN: <%= book.isbn %></p>
			<p>Date read: <%= book.date_read.toLocaleString('default', { day: 'numeric', month: 'short', year: 'numeric' }) %></p>
			<div class="mb-3">
				<% for (let i = 1; i <= book.rating; i++) { %>
					<span class="star yellow large-rate"></span>
				<% } %>
				<% for (let i = book.rating + 1; i <= 5; i++) { %>
					<span class="star grey large-rate"></span>
				<% } %>
			</div>
			<p><%- book.short_description.replace(/(?:\r\n|\r|\n)/g, '<br>') %></p>
			<h3 class="league-spartan">Notes</h3>
			<p><%- book.notes.replace(/(?:\r\n|\r|\n)/g, '<br>') %></p>
		</div>
	</div>
</div>

<%- include('partials/footer.ejs'); -%>